<% include partials/header %>

    <section id="gallery">
      <div class="container justify-content-around">
          <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Super Pizza Bros</a></li>
                <li class="breadcrumb-item"><a href="#">Menu</a></li>
                <!-- <li class="breadcrumb-item active" aria-current="page">Place Order</li> -->
              </ol>
            </nav>
        <div class="row ">
          <% pizzas.forEach( pizza=>{ %>
            <div class="col-lg-4">
                <div class="card mt-3">
                  <img
                    src="<%= pizza.image %>"
                    alt=""
                    class="card-img-top"
                  />
                  <div class="card-body">
                    <h5 class="card-title "><%= pizza.name %></h5>
                      <% pizza.ingredients.forEach(ingredient=>{ %>
                        <button type="button" class="btn btn-light btn-sm rounded"><%= ingredient %></button>
                      <% }) %>
  
                    <hr>
                    <form class="form inline" action="/cart/<%= pizza._id %>" method="post">
                            
                            <div class = "d-flex d-inline-flex justify-content-start">
                              <select class="custom-select my-1 mr-sm-2" name="size" id="">
                                  <option value="regular">Regular</option>
                                  <option value="medium">Medium</option>
                                  <option value="large">Large</option>
                                </select>
                            </div>
                            <div class = "d-flex d-inline-flex align-item-end">
                              <button type="submit" class="btn btn-outline-success btn-xs">
                                  Add To Cart
                                </button>
                            </div>
                            
                        
                          
                          <!-- <div class="dropdown">
                              <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Serving Size
                              </button>
                              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="#"><pre>Regular          <%= pizza.detail.regular %></pre></a>
                                <a class="dropdown-item" href="#"><pre>Medium           <%= pizza.detail.medium %></pre></a>
                                <a class="dropdown-item" href="#"><pre>Large            <%= pizza.detail.large %></pre></a>
                                
                              </div>
                            </div> -->

                    </form>
                   
                      
                    
                  </div>
                </div>
              </div>
          <% }) %>
        </div>
      </div>
    </section>

<% include partials/footer %>
    