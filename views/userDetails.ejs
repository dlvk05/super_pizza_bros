<% include partials/header %>

<div class="container">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="#">Super Pizza Bros</a></li>
      <li class="breadcrumb-item active" aria-current="page">User Profile</li>
    </ol>
  </nav>

  <div class="row mt-3">
    <h4 class="col">Your Details are as follows:</h4>
  </div>
  <hr />

  <div class="row mt-3">
    <h5 class="col"><u>First Name:</u> <%= userDetails.firstName %> </h5>
    <h5 class="col"><u>Last Name:</u> <%= userDetails.lastName %> </h5>
  </div>

  <div class="row mt-3">
    <h5 class="col"><u>Mobile Number:</u> <%= userDetails.mobileNo %> </h5>
  </div>

  <div class="row mt-3">
    <h5 class="col"><u>Email:</u> <%= userDetails.email %> </h5>
  </div>

  <div class="row mt-3">
    <h5 class="col">
      <u>Address:</u> <%= userDetails.address %>
    </h5>
    <h5 class="col"><u>PIN Code:</u> <%= userDetails.pinCode %> </h5>
  </div>
  <hr />

  <div class="row justify-content-start">
    <form action="/editProfile" method="get">
      <button class="btn btn-warning">Edit Details</button>
    </form>
  </div>
</div>

<% include partials/footer %>
