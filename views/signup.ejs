<% include partials/header %>

<div class="container">
        <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a href="#">Super Pizza Bros</a></li>
                  <li class="breadcrumb-item"><a href="#">Signup</a></li>
                  <!-- <li class="breadcrumb-item active" aria-current="page">Place Order</li> -->
                </ol>
              </nav>
        <h4 class="row mt-3">Please Enter The Details Below to Signup:</h4>
        <hr />
        <form class="container" action="/signup" method="POST">
          <div class="row m-5">
            <input required="required" type="text" class="col form-control" placeholder="Username (at least 5 characters)" name="username" minlength="5"/>
          </div>
          <div class="row m-5">
            <input required="required" type="password" class="col form-control" placeholder="Password (at least 5 characters)" name="password" minlength="5"/>
          </div>
          <div class="row m-5">
            <input required="required"
              class="col form-control m-1"
              type="text"
              placeholder="First Name"
              name="firstName"
            />
            <input required="required" class="col form-control m-1" type="text" placeholder="Last Name" name="lastName" />
          </div>
          <div class="row m-5">
            <input required="required" type="email" class="col form-control" placeholder="Email" name="email" />
          </div>
          <div class="row m-5">
            <input required="required" type="text" class="col form-control" placeholder="Mobile Number" name="mobileNo" minlength="10" maxlength="10"/>
          </div>
          <div class="row m-5">
            <input required="required" type="text" class="col-7 form-control m-1" placeholder="Address" name="address"/>
            <input required="required" type="text" class="col form-control m-1" placeholder="PIN code" name="pinCode" minlength="6"/>
          </div>
          <hr />
          <div class="row m-5">
            <button type="submit" class="btn btn-primary">Sign Up</button>
          </div>
        </form>
      </div>





<% include partials/footer %>

