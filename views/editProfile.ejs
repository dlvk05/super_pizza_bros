<% include partials/header %>
<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="#">Super Pizza Bros</a></li>
          <li class="breadcrumb-item"><a href="#">Profile</a></li>
          <li class="breadcrumb-item active" aria-current="page">Edit Profile Details</li>
        </ol>
      </nav>


    <div class="row">
      <h4 class="col">Edit Your Details:</h4>
    </div>
    <hr>

    <form class="container" action="/placeOrder" method="POST">
      <div class="row m-5">
        <input
          class="col form-control m-1"
          type="text"
          placeholder="First Name" name="firstName"
        />
        <input class="col form-control m-1" type="text" placeholder="Last Name" name="lastName"/>
      </div>
      <div class="row m-5">
        <input type="text" class="col form-control" placeholder="Email" name="email" />
      </div>
      <div class="row m-5">
        <input type="text" class="col form-control" placeholder="Mobile Number" name="mobileNo"/>
      </div>
      <div class="row m-5">
        <input type="text" class="col-7 form-control m-1" placeholder="Address" name="address"/>
        <input type="text" class="col form-control m-1" placeholder="PIN code" name="pin"/>
      </div>
      <hr />
      <div class="row m-5">
        <button type="submit" class="btn btn-primary">Place Order</button>
      </div>
    </form>


      
</div>












