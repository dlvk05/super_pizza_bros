<% include partials/header %> 

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="#">Super Pizza Bros</a></li>
          <li class="breadcrumb-item"><a href="#">Cart</a></li>
          <!-- <li class="breadcrumb-item active" aria-current="page">Place Order</li> -->
        </ol>
      </nav>
      <!-- <div class="row"> -->
        <!-- <div class=""></div> -->
      <!-- </div> -->
</div>

<% if(cart.length==0){ %>
<div class="container ">
  <img
    src="https://chillydraji.files.wordpress.com/2015/08/empty_cart.jpeg"
    alt=""
    class="mx-auto d-block"
  />
  <h1 class="text-center">Cart is Empty!</h1>
</div>

<% } else { %>

  <!-- <h1><%= grandTotal %> </h1> -->
<div class="row">
  <div class="col-9">
    <% cart.forEach( item=>{ %>
    <div class="container ">
      <div class="media mt-3 mr-5 mb-3 border border-dark">
        <img
          src="<%= item.image %>"
          class="align-self-center mr-3"
          alt="..."
          style="height: 30%; width: 27%;"
        />
        <div class="container">
          <div class="media-body mt-2">
            <div class="row">
              <h5 class="mt-0 col-10"><%= item.name %></h5>
              <p class="col-2  ">
                <%= parseInt(item.price)*parseInt(item.quantity) %>
              </p>
            </div>
            <div class="row">
              <div class="container pl-0 col-10">
                <% item.ingredients.forEach(ingredient=>{ %>
                <button type="button" class="btn btn-light btn-xs rounded">
                  <%= ingredient %>
                </button>
                <% }) %>
              </div>
              <div class="col-2">
                <!-- <p class="col-2"> -->
                <!-- <span class="border border-dark rounded-pill p-0"> -->
                <form
                  action="/cart/decrease/<%= item.name %>/<%= item.size %>"
                  method="post"
                  class=""
                >
                  <button type="submit" class="border-0 p-0 bg-white">
                    <i class="fas fa-minus "></i>
                    <!-- border-right border-dark px-0  mr-2 ml-0 -->
                  </button>
                </form>
                <span><%= item.quantity %></span>
                <form
                  action="/cart/increase/<%= item.name %>/<%= item.size %>"
                  method="post"
                  class=""
                >
                  <button type="submit" class="border-0 p-0 bg-white">
                    <i class="fas fa-plus "></i>
                    <!-- border-left border-dark p-0 ml-2 mr-0 -->
                  </button>
                </form>
                <!-- </span> -->
                <!-- </p> -->
              </div>
            </div>
            <p style="text-transform: capitalize;"><%= item.size %></p>
          </div>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
  <div class="col-3 card border-success mb-1 sticky-top" style="max-width: 18rem; max-height: 20rem;">
      <div class="card-header bg-transparent border-success">Order Price Details</div>
      <div class="container card-body text-success">
        <div class="row">
            <p class="card-title col">Subtotal</p>
            <p class="card-title col"><%= subTotal %></p>
        </div>
        <div class="row">
            <p class="card-text col">GST</p>
            <p class="card-text col"><%= Math.floor(parseInt(subTotal*0.05)) %></p>
        </div>
      </div>
      <div class="row">
          <h5 class="col card-footer bg-transparent border-success text-success">Grand Total</h5>
          <h5 class="col card-footer bg-transparent border-success"><%= grandTotal %></h5>
      </div>
      <div class="row">
        <form action="/orderForm" class="col">
            <button type="submit" class="col btn btn-success mb-2">Place Order</button>
        </form>
      </div>
    </div>
</div>

<% } %> 

<% include partials/footer %>
